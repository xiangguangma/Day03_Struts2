<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
    <!--针对XmlValidateAction动作类中的所有方法添加的输入验证配置文件-->
    <field name="username"> <!--针对username配置的验证规则-->

        <!--type 的取值可以参见xwork/com/struts/validator/validators/default.xml
        配置文件中提供的几种厂家验证规则-->
        <field-validator type="requiredstring">
            <!--当username输入不合法是提示的错误信息-->
            <message>用户名不能为空</message>
        </field-validator>
    </field>

    <field name="password">
        <field-validator type="regex"> <!--验证规则为正则表达式-->
            <!--定义正则表达式的条件-->
            <param name="regexExpression"><![CDATA[[a-zA-Z]{3,8}]]></param>
            <message>密码必须3~8位的字母组成</message>
        </field-validator>
    </field>
</validators>